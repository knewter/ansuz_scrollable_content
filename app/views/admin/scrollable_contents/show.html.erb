<%= title "Scrollable Content" -%>
<% content_for :sidebar do -%>
  <%= link_to "Add Section", new_admin_scrollable_content_scrollable_content_section_path(@scrollable_content), :class => 'button icon add' -%>
<% end -%>
<h3>Sections</h3>
<ul class='sections'>
  <% @scrollable_content_sections.each do |section| -%>
    <li>
      <h4><%= section.title -%></h4>
      <div>
        <%= section.contents -%>
      </div>
      <%= link_to "Edit Section", edit_admin_scrollable_content_scrollable_content_section_path(section.scrollable_content, section) -%>
    </li>
  <% end -%>
</ul>
