<!-- root element for scrollable --> 
<div class="scrollable"> 
  <!-- TABS whose onClick handler is auto-generated  --> 
  <ul class="navi"> 
    <% plugin_module.scrollable_content_sections.each do |section| -%>
      <li><a><%= section.title -%></a></li> 
    <% end -%>
  </ul> 
  <br clear="all"/> 
   
  <!-- link that scrolls one step backward --> 
  <a class="prev"></a> 

  <!-- list of scrollable items. only first one is shown --> 
  <div class="items"> 
    <% plugin_module.scrollable_content_sections.each do |section| -%>
      <div>
        <%= section.contents -%>
      </div>
    <% end -%>
  </div>
   
  <!-- link that scrolls one step forward --> 
  <a class="next"></a> 
</div>
